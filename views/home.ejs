<%- include("partials/header") -%>

    <h1>Home</h1>

    <p><%= Content%></p>

    <div>
        
        <% postList.forEach(function(post) { %>
            <h2><%=post.title %></h2>

            <p>
                <%=post.content.substring(0, 100) + " ..."%>
                <a href="post/<%=post.title%>">Read More</a>
            </p>
        <% }); %>
    </div>

    <a href="/compose" class="button active">Compose</a>

